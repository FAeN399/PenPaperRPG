{
  "name": "pen-paper-rpg",
  "version": "0.1.0",
  "description": "PF2e Remaster character creation and leveling toolkit",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "typecheck": "turbo run typecheck",
    "schemas:build": "pnpm --dir packages/schemas run build",
    "schemas:sync": "node ./scripts/sync-schemas.mjs",
    "schemas:publish": "pnpm run schemas:build && pnpm run schemas:sync"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.1",
    "vitest": "^3.2.4"
  }
}
